<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <dimen name="widget_margin">0dp</dimen>
    <dimen name="widget_big_font">80dp</dimen>
    <dimen name="widget_small_font">40dp</dimen>
    
    <style name="widget_city">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">15dp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="widget_price">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="widget_change">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

</resources>